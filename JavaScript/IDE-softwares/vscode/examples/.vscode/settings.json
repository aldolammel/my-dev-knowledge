{
    /*
        VSCODE SETTINGS FOR PROJECT: <CLIENT_NAME> <PRODUCT TYPE OR NAME> <YEAR RELEASE>
    */
    // PROJECT SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    "editor.formatOnSave": true, // Automatically formats the current file (all types) in saving.
    "editor.rulers": [
        100 // Draw ruler at column XXX.
    ],
    "editor.wordWrap": "wordWrapColumn", //"on"  // to respect only the screen edge.
    "editor.wordWrapColumn": 100,
    // JAVASCRIPT SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "[javascript]": {
        "editor.defaultFormatter": "",
        "editor.tabSize": 2,
        "editor.indentSize": "tabSize",
        "editor.insertSpaces": true,
    },
    // JSON SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "[json]": {
        "editor.defaultFormatter": ""
    },
    // FILES - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "files.associations": { // Tell VSCode how to treat files based on patterns.
        "*.json": "jsonc",
    },
    // Files/folders to hide from the VSCode explorer:
    "files.exclude": {
        //"**/venv": true,
        //"**/.venv": true,
        //"**/.git": true,
    },
    // Files/folders to hide from the VSCode searchings:
    "search.exclude": {
        "**/venv": true,
        "**/.venv": true,
        "**/.git": true,
    },
}