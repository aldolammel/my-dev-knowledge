{
    /*
        VSCODE SPECIFIC SETTINGS FOR PROJECT: <CLIENT_NAME> <PRODUCT TYPE OR NAME> <YEAR RELEASE>
    */
    // PROJECT SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //...
    // TRANSLATION SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    "django.i18n": false, // Django internationalization features in VSCode extensions.
    // PYTHON SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    //...
    // DJANGO SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "python.analysis.extraPaths": [ // Add extra directories to Python analysis for imports resolution.
        "./apps", // Django apps folder
        "./core" // Settings folder
    ],
    "terminal.integrated.env.linux": { // Environment vars for Linux terminal sessions.
        "DJANGO_SETTINGS_MODULE": "core.settings" // Set default Django settings module for manage.py and shell.
    },
    "[django-html]": {
        //"editor.defaultFormatter": "monosans.djlint",
        "editor.tabSize": 2,
        "editor.indentSize": "tabSize",
        "editor.insertSpaces": true,
        "editor.quickSuggestions": { // Configure IntelliSense suggestions inside Django HTML.
            "other": true, // Suggestions for general code.
            "comments": false, // Suggestions in comments.
            "strings": true // Suggestions inside strings.
        }
    },
    // CSS SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "[css]": {
        //"editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
    },
    // FILE - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Tell VSCode how to treat files based on patterns:
    "files.associations": {
        "**/*.html": "django-html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*.css": "css",
        "*.css": "css",
        //...
        // For a better Python support in Django:
        "**/apps/**/*.py": "python",
        "**/core/**/*.py": "python"
    },
    // Files/folders to hide from the VSCode explorer:
    "files.exclude": {
        //...
        // "**/migrations": true
    },
    // Files/folders to hide from the VSCode searchings:
    "search.exclude": {
        //...
    },
    // HUMAN LANGUAGE, DICTIONARY STUFF - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    // ...
}