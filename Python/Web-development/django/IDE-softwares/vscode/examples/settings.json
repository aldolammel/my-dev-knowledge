{
    /*
        VSCODE SPECIFIC SETTINGS FOR PROJECT: <CLIENT_NAME> <PRODUCT TYPE OR NAME> <YEAR RELEASE>
    */
    // PROJECT SETTINGS:
    //...
    // PYTHON SETTINGS:
    //...
    // DJANGO SETTINGS:
    "python.analysis.extraPaths": [
        "./apps", // Django apps folder
        "./core" // Settings folder
    ],
    "terminal.integrated.env.linux": {
        "DJANGO_SETTINGS_MODULE": "core.settings"
    },
    "[django-html]": {
        //"editor.defaultFormatter": "monosans.djlint",
        "editor.tabSize": 2,
        "editor.indentSize": "tabSize",
        "editor.insertSpaces": true,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    // CSS SETTINGS:
    "[css]": {
        //"editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
    },
    // TRANSLATION SETTINGS:
    "django.i18n": false, // Activates the i18n features for snippets (eg.: _(""))
    // FILE ASSOCIATIONS:
    "files.associations": {
        "**/*.html": "django-html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*.css": "css",
        "*.css": "css",
        "*.json": "jsonc",
        // For a better Python support in Django:
        "**/apps/**/*.py": "python",
        "**/core/**/*.py": "python"
    },
    // FILE EXCLUSIONS:
    "files.exclude": {
        "**/__pycache__": false,
        "**/*.pyc": false,
        "**/node_modules": false,
        "**/dist": false,
        "**/.pytest_cache": false,
        "**/venv": false,
        "**/.venv": false,
        "**/migrations": false
    },
    // SEARCH EXCLUSIONS:
    "search.exclude": {
        "**/venv": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
}