{
    /*
        VSCODE SPECIFIC SETTINGS FOR PROJECT: <CLIENT_NAME> <PRODUCT TYPE OR NAME> <YEAR RELEASE>
    */
    // PROJECT SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    //"terminal.integrated.cwd": "${workspaceFolder}",  // The project folder where the terminal initially opens.
    "editor.rulers": [
        100 // Draw ruler at column XXX.
    ],
    // PYTHON SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "python.defaultInterpreterPath": "./.venv/bin/python3", // Use the project's virtual env Python interpreter.
    "python.analysis.autoImportCompletions": false, // Disable auto-import suggestions in IntelliSense.
    "python.analysis.completeFunctionParens": true, // Automatically add parentheses after function completions.
    // FILE ASSOCIATIONS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "files.associations": { // Tell VSCode how to treat files based on patterns.
        "*.json": "jsonc",
    },
    // FILE EXCLUSIONS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "files.exclude": { // Files/folders to hide from the VSCode explorer.
        //"**/__pycache__": true,
        //"**/*.pyc": true,
        //"**/.pytest_cache": true,
        //"**/venv": true,
        //"**/.venv": true,
    },
    // SEARCH EXCLUSIONS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    "search.exclude": { // Files/folders to hide from the VSCode searchings.
        "**/venv": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    // LANGUAGE, DICTIONARY STUFF - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    // Never in project, always in the developer profiles!
}