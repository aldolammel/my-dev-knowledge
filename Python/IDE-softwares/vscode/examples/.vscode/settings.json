{
    /*
        VSCODE SETTINGS FOR PROJECT: <CLIENT_NAME> <PRODUCT TYPE OR NAME> <YEAR RELEASE>
    */
    // PROJECT SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    //"terminal.integrated.cwd": "${workspaceFolder}",  // Project folder for terminal initializ.
    "editor.formatOnSave": true, // Automatically formats the current file (all types) in saving.
    "editor.rulers": [
        100 // Draw ruler at column XXX.
    ],
    "editor.wordWrap": "wordWrapColumn", //"on"  // to respect only the screen edge.
    "editor.wordWrapColumn": 100,
    // TRANSLATION SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    // Reserved space...
    // PYTHON SETTINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Where's Python interpreter on project:
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
    "python.analysis.autoImportCompletions": false, // Disable auto-import IntelliSense suggestions.
    "python.analysis.completeFunctionParens": true, // Auto add parentheses after function.
    "[python]": {},
    // FILES - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Tell VSCode how to treat files based on patterns:
    "files.associations": {
        "*.json": "jsonc",
    },
    // Files/folders to hide from the VSCode explorer:
    "files.exclude": {
        //"**/__pycache__": true,
        //"**/*.pyc": true,
        //"**/.pytest_cache": true,
        //"**/venv": true,
        //"**/.venv": true,
        //"**/.git": true,
    },
    // Files/folders to hide from the VSCode searchings:
    "search.exclude": {
        "**/venv": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.git": true,
    },
    // HUMAN LANGUAGE, DICTIONARY STUFF - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
    // Never in project, always in the developer profiles!
}